@using GPS.Models.Master
@{
    List<QuotaDetail> ListQuotaConfirm = (List<QuotaDetail>)ViewData["ListQuotaConfirm"] != null ?
        (List<QuotaDetail>)ViewData["ListQuotaConfirm"] : new List<QuotaDetail>();
 }

<div class="modal fade" data-keyboard="false" data-backdrop="static" id="PupUpAdditionalConfirm"
    tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    
<div class="modal-dialog"  style="width: 50%">
<form>
    <div class="modal-content">
        <div class="modal-header">           
            <div class="modal-title" id="myModalLabel">
                <h4 class="modal-title dettitle">Quota Transfer</h4>
            </div>
            <input type="hidden" id="txtAddHideConf"/>
        </div>
        <div class="modal-body">
            <div class="row"> 
                 <div class="form-horizontal">               
                    <div class="col-xs-12">  
                        <div class="col-xs-10 col-sm-10 col-md-6">
                            <div class="form-group form-group-xs">                            
                                <label class="col-sm-3 col-md-4 control-label text-muted"> 
                                    Periode</label>                                   
                                <div class="col-sm-9 col-md-8">  
                                      <input type="text" id="txtPeriodAddConf" style="width:100%" class="form-control" value="@ViewBag.CONSUME_MONTH2" readonly /> 
                                      <input type="hidden" id="txtPeriodAddHideConf" value="@ViewBag.CONSUME_MONTH"/>                                                 
                                </div>                                    
                            </div>   
                            <div class="form-group form-group-xs">                            
                                <label class="col-sm-3 col-md-4 control-label text-muted"> 
                                    Division</label>                                   
                                <div class="col-sm-9 col-md-8">  
                                      <input type="text" id="txtDivAddConf" style="width:100%" class="form-control" value="@ViewBag.DIVISION_NAME" readonly /> 
                                      <input type="hidden" id="txtDivAddHideConf" value="@ViewBag.DIVISION_ID"/>                                                  
                                </div>                                    
                            </div>                   
                        </div>  
                        <div class="col-xs-10 col-sm-10 col-md-6">
                            <div class="form-group form-group-xs">
                                <label class="col-sm-3 col-md-4 control-label text-muted">
                                    Order Type</label>
                                <div class="col-sm-9 col-md-8">
                                     <input type="text" id="txtTypeAddConf" class="form-control" value="@ViewBag.TYPE_DESCRIPTION (@ViewBag.TYPE)" readonly/>  
                                     <input type="hidden" id="txtTypeAddHideConf" value="@ViewBag.TYPE"/>                                                                   
                                </div>
                            </div>
                        </div>                                                                                                                               
                    </div>  
                  </div>                 
            </div> 
                                 
            <div class="row">                
                 <div class="form-horizontal">               
                    <div class="col-xs-12"> 
                          <div class="table-responsive">
                                <table class="table table-striped table-bordered table-condensed">
                                    <thead>
                                        <tr>                                  
                                            <th class="text-center">
                                                Month
                                            </th>
                                             <th class="text-center">
                                                Type
                                            </th>
                                            <th class="text-center">
                                                Amount
                                            </th> 
                                            <th class="text-center" style="width:110px">
                                                Action
                                            </th>                                            
                                        </tr>
                                    </thead>
                                    <tbody id="bodylookup-listemp">
                                         @if ((ListQuotaConfirm.Count() > 0) && (ListQuotaConfirm != null))
                                         {                                            
                                             foreach (QuotaDetail item in ListQuotaConfirm)
                                             {
                                                 <tr>                                               
                                                        <td class="text-center">@item.QUOTA_MONTH2</td>
                                                        <td class="text-left">@item.TYPE_DESCRIPTION</td>                                                        
                                                        <td class="text-right">@string.Format("{0:N0}", item.AMOUNT)</td>  
                                                         <td class="text-right">
                                                            <button type="button" class="btn btn-primary btn-xs" onclick="javascript:ConfirmAdditional('@item.DOC_NO',@item.SEQ_NO,'@item.CONFIRM_FLAG',@item.AMOUNT,@item.DIVISION_ID,@item.DT_MONTH,@item.DST_TYPE);">Commit</button>
                                                            <button type="button" class="btn btn-danger btn-xs" onclick="javascript:ConfirmAdditionalCancel('@item.DOC_NO',@item.SEQ_NO,'@item.CONFIRM_FLAG',@item.AMOUNT,@item.DIVISION_ID,@item.DT_MONTH,@item.DST_TYPE);">Cancel</button>
                                                        </td>                                                                                                         
                                                 </tr>                                              
                                             }
                                          }
                                          else
                                          {
                                            <tr>
                                                <td colspan="5" style="text-align:center">No data found</td>
                                            </tr>
                                          }
                                    </tbody>
                                </table>                               
                            </div>  
                     </div> 
                  </div>                     
            </div>                                
        </div>
        <div class="modal-footer">                                       
                <button type="button" class="btn btn-danger btn-xs" onclick="CancelAdditional()">
                     Close</button>     
         </div>
    </div>
</form>
</div>

</div>