@using GPS.Models.Master
@{
    List<ValuationClass> lpr = ViewData["ValClass"] != "" ? (List<ValuationClass>)ViewData["ValClass"] : new List<ValuationClass>();
}
<div class="table-responsive">
    <table id="LookUpTable-valclass" style="width:100%" class="table table-striped table-bordered table-condensed val-lookup-table">
        <thead>
            <tr>
                <th class="text-center control-label text-muted" colspan="3" style="width:100%">Valuation Class</th>
            </tr>
            <tr>
                <th class="text-center control-label text-muted" >Code</th>
                <th class="text-center control-label text-muted" colspan="2">Description</th>
            </tr>
        </thead>
        <tbody id="bodylookup-valclass">
            @if (lpr.Count > 0)
            {
                foreach (ValuationClass pr in lpr)
                {
                    <tr ondblclick="javascript:MoveValuationClassKey('@pr.VALUATION_CLASS')" style="cursor:pointer">
                        <td class="text-center">@pr.VALUATION_CLASS</td>
                        <td colspan="2">@pr.VALUATION_CLASS_DESC</td>
                    </tr>
                }
            }
            else { 
                <tr>
                    <td colspan="5" class="text-center">No Valuation Class Data</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5">
                    @Html.Partial("_LookupPaging")
                </td>
            </tr>
        </tfoot>
    </table>
</div>