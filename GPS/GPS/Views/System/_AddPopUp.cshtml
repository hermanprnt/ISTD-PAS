<div class="modal-dialog" style="width:800px">
    <form  method="post" action="javascript: onSaveData();" >
    <div class="modal-content">
        <div class="modal-header">
            <div>Add System Master</div>
        </div>﻿
        <div class="modal-body" style="padding-top:0px !important">
            <div class="row">
                <div class="form-horizontal">
                    <div class="col-xs-12">                         
                        <div class="col-xs-12 col-sm-6 col-md-6">
                            <div class="form-group form-group-xs">                            
                                <label class="col-sm-3 col-md-4 control-label text-muted"> 
                                    Function ID</label>                                   
                                <div class="col-sm-8 col-md-8">                                  
                                  <input type="text" id="txtFunctID" onKeypress="FunctID()" maxlength="6" class="form-control mandatory"/>                                 
                                </div>                                    
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-6">
                            <div class="form-group form-group-xs">
                                <label class="col-sm-4 col-md-4 control-label text-muted">
                                    System Code</label>
                                <div class="col-sm-5 col-md-8">                                    
                                    <input type="text" id="txtCodePU" onKeypress="CodePU()" maxlength="30" class="form-control mandatory"/>                                     
                                </div>
                            </div>
                        </div>                                                    
                    </div>
                     <div class="col-xs-12">
                          <div class="col-xs-12 col-sm-6 col-md-6">
                            <div class="form-group form-group-xs">
                                <label class="col-sm-4 col-md-4 control-label text-muted">
                                    System Value</label>
                                <div class="col-sm-5 col-md-8">
                                    <input type="text" id="txtValuePU" class="form-control"/>                                    
                                </div>
                            </div>
                        </div>     
                          <div class="col-xs-12 col-sm-6 col-md-6">
                            <div class="form-group form-group-xs">
                                <label class="col-sm-4 col-md-4 control-label text-muted">
                                    System Remark</label>
                                <div class="col-sm-5 col-md-8">
                                    <input type="text" id="txtRemark" class="form-control"/>                                    
                                </div>
                            </div>
                        </div>  
                     </div>
                </div>
            </div>
            
            <div class="row">
                <div class="modal-footer">
                <div class="col-xs-12 text-right">
                    <div class="form-group-xs">
                        <button type="submit" class="btn btn-primary btn-xs">Save</button>   
                        <button type="button" class="btn btn-danger btn-xs" data-dismiss="modal">Cancel</button>                    
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
</form>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('.date-picker').datepicker({
            autoclose: true,
            todayHighlight: true
        })
        //show datepicker when clicking on the icon
    .next().on(ace.click_event, function () {
        $(this).prev().focus();
    });
    });
</script>



