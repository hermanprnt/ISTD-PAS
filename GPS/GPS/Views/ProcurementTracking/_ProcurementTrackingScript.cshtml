    function onGetData(page, clear)
    {
        $.progressbox.show($tdk.PageTitle, "Search");
        $.ajax({
            type: "POST",
            url: "@Html.Toyota().Page.GetActionUrl("onGetData")",
            data: {
            clear : clear,
            Display: $("#cbodisplay").val(),
            Page:page,
                PR_NO: $("#prno").val(),
                PR_DT_FROM: $("#prdtfrom").val(),
                PR_DT_TO: $("#prdtto").val(),
                VENDOR: $("#vendor").val(),
                CREATED_BY: $("#createdby").val(),
                PO_NO: $("#pono").val(),
                PO_DT: $("#podt").val(),
                WBS_NO: $("#wbs_no").val(),            
                GR_NO: $("#grno").val(),
                GR_DATE: $("#grdt").val(),
                DIVISION_ID: $("#division").val(),
                INV_NO: $("#invno").val(),
                INV_DT: $("#invdt").val(),
                PCS_GRP: $("#pcsgrp").val(),
                CLEARING_NO: $("#clno").val(),
                CLEARING_DATE: $("#cldt").val()
            },
        success: function (data) {
            $("#divtable").html(data);
            CurrentPage = page;
            $.progressbox.hide();
        },
        error:function (xhr, ajaxOptions, thrownError,data){
            alert(xhr.status);
        }
    });
    }

