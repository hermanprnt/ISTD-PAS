@using GPS.Models.Master
@{
    List<Routine> lpr = ViewData["ValClass"] != "" ? (List<Routine>)ViewData["ValClass"] : new List<Routine>();
}
<div class="table-responsive">
    <table id="LookUpTable-valclass" class="table table-striped table-bordered table-condensed val-lookup-table" width="100%">
        <thead>
            <tr>
                <th class="text-center control-label text-muted" style="width:100%" colspan="3">Valuation Class</th>
            </tr>
            <tr>
                <th class="text-center control-label text-muted" style="width:30%">Code</th>
                <th class="text-center control-label text-muted" style="width:70%" colspan="2">Description</th>
            </tr>
        </thead>
        <tbody id="bodylookup-valclass">
            @if (lpr.Count > 0)
            {
                foreach (Routine pr in lpr)
                {
                    <tr ondblclick="javascript:MoveValuationClassKey('@pr.VALUATION_CLASS','@pr.VALUATION_CLASS_DESC', '@pr.ITEM_CLASS', '@pr.ITEM_TYPE')" style="cursor:pointer">
                        <td>@pr.VALUATION_CLASS</td>
                        <td colspan="2">@pr.VALUATION_CLASS_DESC</td>
                    </tr>
                }
            }
            else { 
                <tr>
                    <td colspan="5" class="text-center">No Valuation Class Data</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5">
                    @Html.Partial("_UIPaging")
                </td>
            </tr>
        </tfoot>
    </table>
</div>