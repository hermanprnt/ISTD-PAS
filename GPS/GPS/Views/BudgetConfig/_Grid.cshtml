@using GPS.Models.Master
@{
    List<DataWBSNO> ListBudgetConfig = ViewData["BUDGET_DATA"] != null ? (List<DataWBSNO>)ViewData["BUDGET_DATA"] : new List<DataWBSNO>();
}

<style type="text/css">
    .close 
    {
        opacity: 1;    
    }
</style>


<div class="v-space"></div>
<div class="row">
    <div class="table-responsive col-xs-12 col-sm-12" style="overflow: hidden;">
        <div style="border: 1pt solid #ccc;">
            <div id="tScrollHead" style="width: 98.5%; overflow: hidden;">
                <table id="dynamic-table" class="table table-striped table-bordered table-condensed table-fixed" style="width: 100%; max-width: 1270px;">
                    <thead>
                        <tr>
                            <th style="width:20px" class="grid-checkbox-col"></th>
                            <th style="width:130px">WBS NO</th>
                            <th style="width:300px">WBS DESCRIPTION</th>
                            <th style="width:80px">WBS YEAR</th>
                            <th style="width:80px">WBS TYPE</th>
                            <th style="width:200px">DIVISI</th>
                            <th class="_toggle-detail" style="width:100px">Created By</th>
                            <th class="_toggle-detail" style="width:130px">Created Date</th>
                            <th class="_toggle-detail" style="width:100px">Changed By</th>
                            <th class="_toggle-detail" style="width:130px">Changed Date</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div id="tScrollBody" style="overflow: scroll; height: 350px;">
                <table id="tblScroll" class="table table-striped table-bordered table-condensed table-fixed" style="width: 100%; max-width: 1270px;">
                    <tbody>
                       @{
                           if (ListBudgetConfig.Count > 0)
                           {
                               foreach (DataWBSNO item in ListBudgetConfig)
                               {
                                <tr>
                                    <td class="text-center grid-checkbox-col" style="width:20px">
                                         <input id="cb-@item.Number" class="grid-checkbox grid-checkbox-body" type="checkbox" data-wbs_no="@item.WBS_NO" data-wbs_name="@item.WBS_NAME" data-wbs_year="@item.WBS_YEAR" data-wbs_type="@item.WBS_TYPE" />
                                    </td>
                                    <td class="text-center" style="width:130px">@item.WBS_NO</td>
                                    <td class="text-left" style="width:300px">@item.WBS_NAME</td>
                                    <td class="text-center" style="width:80px">@item.WBS_YEAR</td>
									<td class="text-center" style="width:80px">@item.WBS_TYPE</td>
                                    <td class="text-left" style="width:200px">@item.DIVISION_DESC</td>
									<td class="text-center _toggle-detail" style="width:100px">@item.CREATED_BY</td>
                                    <td class="text-center _toggle-detail" style="width:130px">@item.CREATED_DT</td>
                                    <td class="text-center _toggle-detail" style="width:100px">@item.CHANGED_BY</td>
                                    <td class="text-center _toggle-detail" style="width:130px">@item.CHANGED_DT</td>
                                </tr>  
                               }
                           }
                           else
                           {
                            <tr>
                                <td colspan="12" class="text-center">
                                    No data retrieved.
                                </td>
                            </tr>
                           }
                        }
                    </tbody>
                </table>
            </div>
            <div>
                <table class="table table-striped table-bordered table-condensed table-fixed" style="width: 100%">
                    <tfoot>
                        <tr>
                            <td class="col-xs-8 listdata">
                                @Html.Partial("_Paging")
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $("#tScrollBody").scroll(function () {
        $("#tScrollHead").scrollLeft($("#tScrollBody").scrollLeft());
    });
</script>