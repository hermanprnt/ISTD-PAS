                division: division,
                WbsNo: wbsno,
                WbsType: wbstype
            },
            success: function (data) {
                var result = data.split('|');
                if (result[0] == 'True') {
                    $.messagebox.show(
                    "Info",
                    result[1],
                    "SUC",
                    "SINGLE",
                    "OkInfoSave()",
                    ""
                    )
                }
                else {
                    $.messagebox.show(
                        "Error",
                        result[1],
                        "ERR",
                        "SINGLE",
                        "",
                        ""
                    )
                }
            }
        });
    }
    function OkInfoSave() {
        $("#basicModal").modal('hide');
