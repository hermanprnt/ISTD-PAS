<style>
    .table {
        table-layout: fixed;
    }

        .table > tr > td {
            vertical-align: middle;
        }

        .table > thead > tr > th {
            vertical-align: middle;
        }
</style>

<script>
    $('#form-lookupwbs-grid').submit(function () {
        getWbsClassGrid(1);
        return false;
    });
</script>

<div class="modal-dialog modal-xs" style="width:700px">
    <div class="modal-content">
        <div class="modal-header">
            <div>WBS No Lookup</div>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="form-group form-group-xs">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-2">
                                <label class="control-label text-muted ">WBS No</label>
                            </div>
                            <div class="col-md-6">
                                <input id="valsearchbox_wbsno" class="form-control custom-text" type="text">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-2">
                                <label class="control-label text-muted ">WBS Description</label>
                            </div>
                            <div class="col-md-6">
                                <input id="valsearchbox_wbsdescription" class="form-control custom-text" type="text">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-2">
                                <label class="control-label text-muted ">WBS Year</label>
                            </div>
                            <div class="col-md-6">
                                <input id="valsearchbox_wbsyear" class="form-control custom-text" type="text">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <span class="input-group-btn">
                        <button id="btnsearch-lookupwbs" class="addinput custom-button-grid btn btn-primary btn-xs" type="button" onclick="javascript:getLookupWbsClassGrid(1)">
                            &nbsp<i class="fa fa-search"></i>&nbsp
                        </button>
                        <button id="btnclearlookup" class="addinput custom-button-grid btn btn-default btn-xs" type="button" onclick="javascript:ClearLookupCriteria('wbsclass')">
                            &nbsp<i class="fa fa-eraser"></i>&nbsp
                        </button>
                    </span>
                </div>
            </div>
            <div class="row" style="margin-top:10px">
                <div class="full-border">
                    <div class="col-xs-12 col-md-12 form-main-group-box-search" id="lookupwbs-grid-container">
                        @Html.Partial("_LookupDataWBSGrid")
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="col-xs-12 text-right">
                <button type="button" class="btn btn-danger btn-xs" onclick="javascript:closeLookupWBSClass()">Cancel</button>
            </div>
        </div>
    </div>
</div>