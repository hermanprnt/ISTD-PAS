<div class="row">
    <div class="col-xs-12 col-sm-8">
        <div class="form-inline">
            <label>
                Show per page
                <select class="form-control">
                    <option>10</option>
                    <option>25</option>
                    <option>50</option>
                    <option>100</option>
                </select>
            </label>
        </div>
    </div>
    <div class="col-xs-12 col-sm-4 text-right">
        <div class="form-group">
            <div class="btn-group">
                <button type="button" class="btn btn-primary">Action</button>
                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                    <span class="caret"></span>
                    <span class="sr-only">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li><a href="#">Edit</a></li>
                    <li><a href="#">Delete</a></li>
                    <li><a href="#">Download</a></li>
                    <li><a href="#">Upload</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th class="text-center" width="100px">#</th>
                <th class="text-center" width="35px;"><input type="checkbox" id="checkall" /></th>
                <th width="40px">No</th>
                <th>First name</th>
                <th>Last name</th>
                <th>Date of birth</th>
            </tr>
        </thead>
    
        @for (int i=1; i <= 5; i++)
        {
            <tr>
                <td class="text-center">
                    <button type="button" class="btn btn-primary btn-sm btn-edit" title="Edit"><i class="fa fa-edit"></i></button>
                    <button type="button" class="btn btn-danger btn-sm btn-delete" title="Delete"><i class="fa fa-times"></i></button>
                </td>
                <td class="text-center"><input type="checkbox" class="check" /></td>
                <td class="text-center">@i</td>
                <td>First name @i</td>
                <td>Last name @i</td>
                <td>Date @i</td>
            </tr>
        }
    </table>
</div>

<ul class="pagination">
    <li><a href="#"><<</a></li>
    @for (int i = 1; i <= 5; i++)
    {
        <li><a href="j#">@i</a></li>
    }
    <li><a href="#">>></a></li>
</ul>