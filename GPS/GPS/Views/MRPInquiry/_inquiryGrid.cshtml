@using System.Linq
@using GPS.CommonFunc
@using GPS.Constants
@using GPS.Models.MRP
@model GPS.ViewModels.GenericViewModel<GPS.Models.MRP.MaterialResourcePlanning>

<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th rowspan="2"></th>
            <th rowspan="2">Month</th>
            <th rowspan="2">PR No</th>
            <th rowspan="2">Status</th>
            <th colspan="2">Created</th>
            <th colspan="2">Changed</th>
            <th colspan="2">PO Appoval</th>
            <th colspan="2">PO Released</th>
        </tr>
        <tr>
            <th>By</th>
            <th>Date</th>
            <th>By</th>
            <th>Date</th>
            <th>By</th>
            <th>Date</th>
            <th>By</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.DataList.Any())
        {
            foreach (MaterialResourcePlanning item in Model.DataList)
            {
                <tr>
                    <td class="text-center"><input id="chk-mrp-@item.DataNo" type="checkbox" /></td>
                    <td><a id="lnk-mrp-@item.DataNo" href="javascript:void(0)" data-mrpmonth="@item.MRPMonth">@item.MRPMonth</a></td>
                    <td>@item.PRNo</td>
                    <td>@item.Status</td>
                    <td>@item.CreatedBy</td>
                    <td class="text-center">@item.CreatedDate.ToStandardFormat()</td>
                    <td>@item.ChangedBy</td>
                    <td class="text-center">@item.ChangedDate.ToStandardFormat()</td>
                    <td>@item.POApprovalBy</td>
                    <td class="text-center">@item.POApprovalDate.ToStandardFormat()</td>
                    <td>@item.POReleasedBy</td>
                    <td class="text-center">@item.POReleasedDate.ToStandardFormat()</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="12" class="text-center">@CommonDisplayMessage.NoData</td>
            </tr>
        }
    </tbody>
</table>
<div class="v-space"></div>
