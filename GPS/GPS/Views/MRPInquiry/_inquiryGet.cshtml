@using GPS.Constants.MRP
@model GPS.ViewModels.MRP.MRPGetViewModel

<div class="modal-dialog modal-xl">
    <div class="modal-content">
        <div class="modal-header">
            <p class="modal-title">
                Material Resource Planning Result Inquiry
            </p>
        </div>
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="row">
                    <div class="col-xs-12 col-sm-4">
                        <div class="form-group form-group-xs">
                            <div class="col-sm-4">
                                <label for="txtget-procusagegroup" class="control-label text-muted">Proc. Usage Group</label>
                            </div>
                            <div class="col-sm-8">
                                <input type="text" id="txtget-procusagegroup" value="@Model.ProcUsageGroupCode" class="form-control" readonly/>
                            </div>
                        </div>
                        <div class="form-group form-group-xs">
                            <div class="col-sm-4">
                                <label for="txtget-mrpmonth" class="control-label text-muted">MRP Month</label>
                            </div>
                            <div class="col-sm-8">
                                <input type="text" id="txtget-mrpmonth" value="@Model.MRPMonth" class="form-control" readonly />
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-4">
                        <div class="form-group form-group-xs">
                            <div class="col-sm-4">
                                <label for="txtget-prno" class="control-label text-muted">PR No</label>
                            </div>
                            <div class="col-sm-8">
                                <input type="text" id="txtget-prno" value="@Model.PRNo" class="form-control" readonly/>
                            </div>
                        </div>
                        <div class="form-group form-group-xs">
                            <div class="col-sm-4">
                                <label for="txtget-status" class="control-label text-muted">Status</label>
                            </div>
                            <div class="col-sm-8">
                                <input type="text" id="txtget-status" value="@Model.Status" class="form-control" readonly />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="v-space"></div>
                <div class="row">
                    <div class="col-xs-12 col-sm-6">
                        <button id="btnget-download" class="btn btn-primary btn-xs btn-std" type="button">Download</button>
                    </div>
                </div>
                <div class="v-space"></div>
                <div class="line-br"></div>
                <div class="row">
                    <div id="grid-mrpget" class="col-xs-12">
                        @Html.Partial(MRPPage.InquiryItemGridPartial, Model)
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="btn-group-xs text-right">
                    <button id="btnget-close" type="button" class="btn btn-danger btn-xs btn-std" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {

        /* ============================== Init: begin ============================== */

        function DisableAllFeatures() {

        }

        function EnableAllFeatures() {

        }

        function ResetForm() {
        }

        function Init() {

            ResetForm();
            EnableAllFeatures();
        }

        Init();

        /* =============================== Init: end =============================== */
    });
</script>