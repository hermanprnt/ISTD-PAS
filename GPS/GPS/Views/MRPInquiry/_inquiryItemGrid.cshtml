@using System.Linq
@using GPS.Constants
@using GPS.Models.MRP
@model GPS.ViewModels.MRP.MRPGetViewModel

<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th rowspan="2"></th>
            <th rowspan="2">Plant</th>
            <th rowspan="2">Storage Location</th>
            <th colspan="2">Material</th>
            <th rowspan="2">Pcs/Kanban</th>
            <th rowspan="2">N Qty</th>
            <th rowspan="2">N+1 Qty</th>
            <th rowspan="2">N+2 Qty</th>
            <th rowspan="2">N+3 Qty</th>
            <th rowspan="2">N+4 Qty</th>
            <th rowspan="2">N+5 Qty</th>
        </tr>
        <tr>
            <th>No</th>
            <th>Desc</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.DataList.Any())
        {
            foreach (MRPItem item in Model.DataList)
            {
                <tr>
                    <td class="text-center">@item.DataNo</td>
                    <td>@item.Plant</td>
                    <td>@item.SLoc</td>
                    <td>@item.MaterialCode</td>
                    <td>@item.MaterialDesc</td>
                    <td>@item.PcsPerKanban</td>
                    <td class="text-right">@item.NQty</td>
                    <td class="text-right">@item.N1Qty</td>
                    <td class="text-right">@item.N2Qty</td>
                    <td class="text-right">@item.N3Qty</td>
                    <td class="text-right">@item.N4Qty</td>
                    <td class="text-right">@item.N5Qty</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="12" class="text-center">@CommonDisplayMessage.NoData</td>
            </tr>
        }
    </tbody>
</table>
<div class="v-space"></div>
