@using GPS.Models.MRP
@using GPS.Models.MRP
@{    
    List<MRPGentaniHeader> ListProcUsage = (List<MRPGentaniHeader>)ViewData["ListProcUsage"];
    List<MRPGentaniHeader> ListHeaderType = (List<MRPGentaniHeader>)ViewData["ListHeaderType"];
     
    string edit = (string)ViewData["edit"];
    string requiredleft = "required-left";
    string required = "required='required'";
    string disabled = "";
    string cursor = "pointer";
    string mandatory = "mandatory";
    if (edit == "1")
    {
        mandatory = "";
        requiredleft = "";
        required = "";
        disabled = "disabled='disabled'";
        cursor = "";
    }     
}

<div class="modal-dialog" style="width: 1200px">
<form  method="post" action="javascript: onSaveData();" >
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <div class="modal-title" id="myModalLabel">
                
            </div>
            <input type="hidden" id="txtEdit" value="@edit"/>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="form-horizontal">
                    <div class="col-xs-12">                         
                        <div class="col-xs-12 col-sm-12 col-md-4">
                            <div class="form-group form-group-xs">                            
                                <label class="col-sm-3 col-md-4 control-label text-muted"> @*@requiredleft*@
                                    Proc Usage</label>                                   
                                <div class="col-sm-8 col-md-8">                         
                                  <select id="txtProcUsagePU" onchange="ProcUsagePU()" class="form-control @mandatory" @disabled> @*@required*@
                                    <option value=""></option>
                                    @foreach (MRPGentaniHeader item in ListProcUsage)
                                    {
                                        <option value="@item.PROC_USAGE_CD">@item.PROC_USAGE_CD - @item.DESCRIPTION</option> 
                                    }
                                </select>
                                </div>                                    
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-4">
                            <div class="form-group form-group-xs">
                                <label class="col-sm-4 col-md-4 control-label text-muted">@* @requiredleft*@
                                    Header Type</label>
                                <div class="col-sm-5 col-md-8">
                                    @*<input type="text" id="txtHdrTypePU" class="form-control @mandatory" @disabled/>*@ 
                                     <select id="txtHdrTypePU" class="form-control @mandatory" @disabled >@*@required*@
                                        <option value=""></option>
                                        @foreach (MRPGentaniHeader item in ListHeaderType)
                                        {
                                            <option value="@item.GENTANI_HEADER_TYPE">@item.GENTANI_HEADER_TYPE</option> 
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-4">
                            <div class="form-group form-group-xs">
                                <label class="col-sm-4 col-md-4 control-label text-muted">@* @requiredleft*@
                                    Header Code</label>
                                <div class="col-sm-5 col-md-8">
                                    <input type="text" id="txtHdrCDPU" @*onKeypress="HdrCDPU()"*@ class="form-control @mandatory"/>
                                    <input type="hidden" id="txtHdrCDPU_hidden"/>
                                    @* <select id="txtHdrCDPU" onchange="HdrCDPU()" class="form-control @mandatory" @disabled>                                      
                                     </select>*@
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-4">
                            <div class="form-group form-group-xs">
                                <label class="col-sm-4 col-md-4 control-label text-muted">@* @requiredleft*@
                                    Model</label>
                                <div class="col-sm-5 col-md-8">
                                    <input type="text" id="txtModelPU" @*onKeypress="ModelPU()"*@ class="form-control "/>
                                    <input type="hidden" id="txtModelPU_hidden"/>
                                    @* <select id="txtHdrCDPU" onchange="HdrCDPU()" class="form-control @mandatory" @disabled>                                      
                                     </select>*@
                                </div>
                            </div>
                        </div>   
                        <div class="col-xs-12 col-sm-12 col-md-4">
                            <div class="form-group form-group-xs">
                                <label class="col-sm-4 col-md-4 control-label text-muted">@* @requiredleft*@
                                    Transmission</label>
                                <div class="col-sm-5 col-md-8">
                                    <input type="text" id="txtTransPU" @*onKeypress="TransPU()"*@ class="form-control "/>
                                    <input type="hidden" id="txtTransPU_hidden"/>
                                    @* <select id="txtHdrCDPU" onchange="HdrCDPU()" class="form-control @mandatory" @disabled>                                      
                                     </select>*@
                                </div>
                            </div>
                        </div>   
                        <div class="col-xs-12 col-sm-12 col-md-4">
                            <div class="form-group form-group-xs">
                                <label class="col-sm-4 col-md-4 control-label text-muted">@* @requiredleft*@
                                    Engine</label>
                                <div class="col-sm-5 col-md-8">
                                    <input type="text" id="txtEnginePU" @*onKeypress="EnginePU()"*@ class="form-control "/>
                                    <input type="hidden" id="txtEnginePU_hidden"/>
                                    @* <select id="txtHdrCDPU" onchange="HdrCDPU()" class="form-control @mandatory" @disabled>                                      
                                     </select>*@
                                </div>
                            </div>
                        </div>     
                        <div class="col-xs-12 col-sm-12 col-md-4">
                            <div class="form-group form-group-xs">
                                <label class="col-sm-4 col-md-4 control-label text-muted">@* @requiredleft*@
                                    Re-Exporter Code</label>
                                <div class="col-sm-5 col-md-8">
                                <select id="txtDEPU" onchange="DEPU()" class="form-control > @*@required*@
                                    <option value=""></option>
                                    <option value="D">Domestic</option>
                                    <option value="E">Export</option>
                                </select>
                                   
                                    @* <select id="txtHdrCDPU" onchange="HdrCDPU()" class="form-control @mandatory" @disabled>                                      
                                     </select>*@
                                </div>
                            </div>
                        </div>    
                        <div class="col-xs-12 col-sm-12 col-md-4">
                            <div class="form-group form-group-xs">
                                <label class="col-sm-4 col-md-4 control-label text-muted">@* @requiredleft*@
                                    Prod. Sfx</label>
                                <div class="col-sm-5 col-md-8">
                                    <input type="text" id="txtProdSfxPU" @*onKeypress="ProdSfxPU()"*@ class="form-control "/>
                                    <input type="hidden" id="txtProdSfxPU_hidden"/>
                                    @* <select id="txtHdrCDPU" onchange="HdrCDPU()" class="form-control @mandatory" @disabled>                                      
                                     </select>*@
                                </div>
                            </div>
                        </div>  
                        <div class="col-xs-12 col-sm-12 col-md-4">
                            <div class="form-group form-group-xs">
                                <label class="col-sm-4 col-md-4 control-label text-muted">@* @requiredleft*@
                                    Color</label>
                                <div class="col-sm-5 col-md-8">
                                    <input type="text" id="txtColorPU" @*onKeypress="ColorPU()"*@ class="form-control "/>
                                    <input type="hidden" id="txtColorPU_hidden"/>
                                    @* <select id="txtHdrCDPU" onchange="HdrCDPU()" class="form-control @mandatory" @disabled>                                      
                                     </select>*@
                                </div>
                            </div>
                        </div>                                                    
                        <div class="col-xs-12 col-sm-12 col-md-4">
                            <div class="form-group form-group-xs">
                                <label class="col-sm-3 col-md-4 control-label text-muted">@* @requiredleft*@
                                    Valid From</label>                               
                                <div class="input-group input-group-xs col-xs-8 col-sm-9 col-md-8" style="padding-left: 11px;padding-right: 11px; height: 26px;">
                                    <div class="input-group" style="cursor: @cursor;">
                                        <input class="form-control date-picker @mandatory" onchange="ValidFrom()" id="txtValidFrom" name="txtValidFrom" type="text" data-date-format="yyyy-mm-dd" 
                                           @disabled  /> 
                                        <span class="input-group-addon" @disabled><i class="fa fa-calendar bigger-110"></i></span>
                                    </div>              
                                </div>
                            </div>
                        </div>                       
                        <div class="col-xs-12 col-sm-12 col-md-4">
                             <div class="form-group form-group-xs">
                                <label class="col-sm-3 col-md-4 control-label text-muted"> @* @requiredleft*@
                                    Valid To</label>                               
                                <div class="input-group input-group-xs col-xs-8 col-sm-9 col-md-8" style="padding-left: 11px;padding-right: 11px; height: 26px;">
                                    <div class="input-group" style="cursor: pointer;">
                                        <input class="form-control date-picker" id="txtValidTo" name="txtValidTo" type="text" data-date-format="yyyy-mm-dd" 
                                          readonly="readonly"   />
                                        <span class="input-group-addon"><i class="fa fa-calendar bigger-110"></i></span> 
                                    </div>              
                                </div>
                            </div>
                        </div>                                             
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="modal-footer">
                    <div class="col-xs-6">
                    </div>
                <div class="col-xs-6 text-right">
                    <div class="form-group-xs">
                        <button type="submit" class="btn btn-primary btn-xs">
                            Save</button>                       
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
</form>
</div>

<div id="confirm-save" class="modal fade"> 
    <div class="modal-dialog modal-md" style="width: 300px;">
        <div class="modal-content">
            <div class="modal-header">
                <div class="close" style="opacity: 1 !important; margin-top: -7px;">
                    <span aria-hidden="true"><img src="@Url.Content("~/Content/Bootstrap/img/Warning.png")" class="modal-icon" /></span>
                    <span class="sr-only">Close</span>
                </div>
                <h4 class="modal-title" id="popup-title">Warning</h4>
             </div>
            <div class="modal-body">
                <div class="row" style="padding-left: 10px;">
                  <center><div id="ConfirmModal"></div></center>  
                </div>
                <div class="row" style="text-align: right;padding-right: 10px; padding-top: 5px;">
                    <button type="button" class="btn btn-primary btn-xs" onclick="OkWarningSave()" style="width: 60px;">OK</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="info-save" class="modal fade"> 
    <div class="modal-dialog modal-md" style="width: 350px;">
        <div class="modal-content">
            <div class="modal-header">
                <div class="close" style="opacity: 1 !important; margin-top: -7px;">
                    <span aria-hidden="true"><img src="@Url.Content("~/Content/Bootstrap/img/information.png")" class="modal-icon" /></span>
                    <span class="sr-only">Close</span>
                </div>
                <h4 class="modal-title" id="popup-title">Information</h4>
                </div>

            <div class="modal-body">
                <div class="row" style="padding-left: 10px;">
                    <div id="infoSave"></div>
                </div>
                <div class="row" style="text-align: right;padding-right: 10px; padding-top: 5px;">
                    <button type="button" class="btn btn-primary btn-xs" onclick="OkInfoSave()"  style="width: 60px;">OK</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
$(document).ready(function () {
    $('.date-picker').datepicker({
        autoclose: true,
        todayHighlight: true
    })
    //show datepicker when clicking on the icon
	.next().on(ace.click_event, function () {
		$(this).prev().focus();
	});
});
</script>



