@using GPS.Models.PR.Common
@{
    List<PRCommonList> costCenterList = ViewData["CostCenter"] != null ? (List<PRCommonList>)ViewData["CostCenter"] : new List<PRCommonList>();
}

<select id="acost" class="cursor-1 blank clc_costcenter" style="width:100%;">
@if ((costCenterList != null) && (costCenterList.Count > 0))
{
    <option value="" class="cursor-1">None</option>
    foreach (PRCommonList cl in costCenterList)
    {
        <option class="cursor-1" value="@cl.COST_CENTER">@cl.COST_CENTER - @cl.COST_CENTER_DESC</option>
    }
}
else { 
    <option value="" class="cursor-1">Select Division</option>
}
</select>