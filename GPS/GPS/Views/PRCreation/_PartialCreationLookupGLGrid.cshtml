@using GPS.Models.PR.PRCreation
@{
    List<PRCreation> lpr = ViewData["GLAccount"] != "" ? (List<PRCreation>)ViewData["GLAccount"] : new List<PRCreation>();
}
<div class="table-responsive">
    <table id="LookUpTable-glclass" class="table table-striped table-bordered table-condensed gl-lookup-table" width="100%">
        <thead>
            <tr>
                <th class="text-center control-label text-muted" style="width:100%"  colspan="3">GL Account</th>
            </tr>
            <tr>
                <th class="text-center control-label text-muted" style="width:30%">Code</th>
                <th class="text-center control-label text-muted" style="width:70%" colspan="2">Description</th>
            </tr>
        </thead>
        <tbody id="bodylookup-glclass">
            @if (lpr.Count > 0)
            {
                foreach (PRCreation pr in lpr)
                { 
                    <tr ondblclick="javascript:MoveGLAccountKey('@pr.GL_ACCOUNT_CD')" style="cursor:pointer">
                        <td>@pr.GL_ACCOUNT_CD</td>
					    <td colspan="2">@pr.GL_ACCOUNT_DESC</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No GL Account Data</td>
                </tr> 
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5">
                    @Html.Partial("_UIPaging")
                </td>
            </tr>
        </tfoot>
    </table>
</div>