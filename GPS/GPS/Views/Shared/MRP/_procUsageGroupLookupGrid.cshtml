@using GPS.Constants
@using GPS.Models.MRP
@model IEnumerable<GPS.Models.MRP.ProcUsageGroup>

<div>
    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th class="text-center" style="width: 50px;">
                    <input id="chkall-procgroup" class="cursor-link" type="checkbox"/>
                </th>
                <th class="text-center" style="width: 112px;">Code</th>
                <th class="text-center" style="width: 112px;">Name</th>
            </tr>
        </thead>
    </table>
</div>
<div style="overflow: auto; height: 153px;">
    <table id="datagrid-procgroup" class="table table-striped table-bordered table-condensed">
        @if (Model.Any())
        {
            foreach (ProcUsageGroup pug in Model)
            {
                <tr>
                    <td class="text-center" style="width: 50px;">
                        <input id="chk-procgroup-@pug.ProcUsageCode" type="checkbox" class="lookup-checkbox cursor-link" data-value="@pug.ProcUsageCode"/>
                    </td>
                    <td class="text-center" style="width: 112px;">@pug.ProcUsageCode</td>
                    <td class="text-center" style="width: 112px;">@pug.Desc</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2" class="text-center">@CommonDisplayMessage.NoData</td>
            </tr>
        }
    </table>
</div>