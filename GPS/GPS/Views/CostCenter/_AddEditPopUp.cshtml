@using GPS.CommonFunc
@using GPS.Controllers.Master
@using GPS.Models.Master
@{
    CostCenter data = ViewData["CostCenterData"] == null ? new CostCenter() : (CostCenter)ViewData["CostCenterData"];
    string edit = (string)ViewData["edit"];
    string title = " Cost Center";
    if (edit == "1")
    {
        title = "Edit" + title;      
    } 
    else {
        title = "Add" + title;
    }
}

<div class="modal-dialog" style="width:800px">
    <form  method="post" action="javascript: onSaveData();" >
    <div class="modal-content">
        <div class="modal-header">
            <div>@title</div>
        </div>
        <div class="modal-body">
            <input type="hidden" id="txtEdit" value="@edit"/>
            <div class="form-horizontal">
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group form-group-xs">
                            <div class="col-xs-5 col-sm-4 text-right">
                                <label class="control-label text-muted">Cost Center</label>
                            </div>
                            <div class="col-xs-7 col-sm-8">
                                <input type="text" id="txtedit-costcenter" class="form-control mandatory" maxlength="8" value="@data.CostCenterCd" />
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group form-group-xs">
                            <div class="col-xs-5 col-sm-4 text-right">
                                <label class="control-label text-muted">Division</label>
                            </div>
                            <div class="col-xs-7 col-sm-8">
                                @Html.DropDownList("cmbedit-division", DivisionController.GetDivisionList(), new {@class = "cursor-1", @style="width:100%;"})
                            </div>
                        </div>
                    </div>                 
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group form-group-xs">
                            <div class="col-xs-5 col-sm-4 text-right">
                                <label class="control-label text-muted ">Description</label>
                            </div>
                            <div class="col-xs-7 col-sm-8">
                                <input type="text" id="txtedit-description" class="form-control mandatory" value="@data.CostCenterDesc" />
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group form-group-xs">
                            <div class="col-xs-5 col-sm-4 text-right">
                                <label class="control-label text-muted">Valid Date</label>
                            </div>
                            <div class="col-xs-7 col-sm-8">
                                <input type="text" id="txtedit-validdate" class="form-control mandatory date" readonly value="@data.ValidDtFrom - @data.ValidDtTo" style="background-color:white;"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group form-group-xs">
                            <div class="col-xs-5 col-sm-4 text-right">
                                <label class="control-label text-muted ">Resp Person</label>
                            </div>
                            <div class="col-xs-7 col-sm-8">
                                <input type="text" id="txtedit-respperson" class="form-control mandatory" value="@data.RespPerson" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="col-xs-12 text-right">
                <div class="form-group-xs">
                    <button type="submit" class="btn btn-primary btn-xs btn-std"> Save </button>
                    <button type="button" class="btn btn-danger btn-xs" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</form>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#txtedit-validdate").todaterangepicker();
        $("#cmbedit-division").val("@data.Division");
    }); 
</script>


