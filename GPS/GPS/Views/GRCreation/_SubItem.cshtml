@using GPS.Models.MRP
@{
    List<GRCreation> ListDetail = (List<GRCreation>)ViewData["ListSubItem"];
    
}
@if (ListDetail != null)
{   
    <div id="PODetail" style="" class=" col-xs-3 col-sm-3">
        <div class="row">
            <div class="table-responsive"> 
                <div style="border: 1pt solid #ccc;">
        
                   <div style="overflow: hidden;" id="DivHeaderRow"></div>
                   <div style="overflow:scroll;" onscroll="OnScrollDiv(this)" id="DivMainContent">          
                       <table id="tscroll" class="table table-striped table-bordered table-condensed table-fixed" style="width:100%">
                            <thead>
                                <tr>        
                                    <th >Material Number</th>
                                    <th >Material Description</th>
                                    <th >Qty</th>
                                    <th >UOM</th>
                                    <th >Price</th>
                                    <th >Amount</th>
                                    <th >Receive</th>               
                                </tr>
                            </thead>   
                            <tbody>
                                
                            @if (ListDetail.Count > 0)
                            {
                                foreach (GRCreation item in ListDetail)
                                {
                                        <tr>
                                            <td class="text-center">@item.MAT_NO</td>                               
                                            <td class="text-center">@item.MAT_DESC</td>                       
                                            <td class="text-center">@item.PO_QTY_ORI</td>                      
                                            <td class="text-center">@item.UOM</td>                      
                                            <td class="text-center">@item.PRICE_PER_UOM</td>                      
                                            <td class="text-center">@item.ORI_AMOUNT</td>                      
                                            <td class="text-center">@item.PO_QTY_USED</td>
                                        </tr>  
                                }
                            }
                            else
                            {
                                    <tr>
                                        <td colspan="11" class="text-center">
                                            No data found
                                        </td>
                                    </tr>
                            }
                                
                            </tbody>                               
                        </table>                    
                   </div>     
                       @* <table class="table table-striped table-bordered table-condensed table-fixed" style="width: 100%">
                            <tfoot>
                                <tr>
                                    <td class="col-xs-8 listdata">
                                        @Html.Partial("_Paging")
                                    </td>
                                </tr>
                            </tfoot>
                        </table>*@
           
                </div>
            </div>
        </div>
    </div>
}
    