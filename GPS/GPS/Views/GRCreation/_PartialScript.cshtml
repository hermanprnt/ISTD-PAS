//                            success: function(data){
//                                $("#poReffGrid").html(data);
//                                $("#pop-PObyref").modal();
//                                document.getElementById('lblReffConfirm').innerHTML =message;
//                            }
//                        });
                    }
                    else if(a=="c")
                    {
                        $.messagebox.show(
                            "Create GR",
                            message,
