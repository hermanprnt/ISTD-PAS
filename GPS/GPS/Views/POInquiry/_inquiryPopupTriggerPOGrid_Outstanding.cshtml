@using GPS.Constants;
@using GPS.Models.PO;
@model List<GPS.Models.PO.POMonitoring>

<div class="table-responsive">
    <div style="width:817px;">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th class="text-center" style="width:120px">PR No.</th>
                    <th class="text-center" style="width:50px">Item</th>
                    <th class="text-center">Material</th>
                    <th class="text-center" style="width:120px">PO No.</th>
                    <th class="text-center" style="width:100px">Status</th>
                    <th class="text-center" style="width:40px"></th>
                    <th class="text-center" style="width:17px;border-right: solid 1px #d5d1d1;"></th>
                </tr>
            </thead>
        </table>
    </div>
    <div class="grid-overflow" style="overflow-y:scroll;height: 170px;width:817px;">
        <table id="mainTable" class="table table-striped table-bordered">
            <tbody>
                @if (Model.Count() > 0)
                {
                    foreach (POMonitoring item in Model)
                    {
                        <tr>
                            <td class="text-left" style="width:120px">@item.PR_NO</td>
                            <td class="text-center" style="width:50px">@item.PR_ITEM_NO</td>
                            <td class="text-left" >@item.MAT_NO</td>
                            <td class="text-left" style="width:120px">@item.PO_NO</td>
                            <td id="status-@item.PR_NO@item.PR_ITEM_NO" class="text-center" style="width:100px">@item.STATUS</td>
                            <td id="indicator-@item.PR_NO@item.PR_ITEM_NO" class="text-center indicator-image@(item.STATUS=="LOCK"?"-lock":"")" style="width:40px">
                                <img class="generate-indicator@(item.STATUS=="LOCK"?"-lock":"")" src="@Url.Content("~/Content/img/LoadingImage.gif")" style="width:16px;display:none;" />
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">@CommonDisplayMessage.NoData</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
<div class="row">
    <div class="col-xs-8" style="margin-bottom: 20px;">
    </div>
</div>