@using System
@using System.Linq
@using GPS.Constants
@using GPS.ViewModels.PO
@using GPS.CommonFunc
@model GPS.ViewModels.GenericViewModel<PurchaseOrderApprovalHistory>

    <div style="overflow: auto;">
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th class="text-center" width="95px">Last Status</th>
                    <th class="text-center" width="95px">Last Approved By</th>
                    <th class="text-center" width="95px">Last Approved Date</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.DataList.Any())
                {
                    foreach (PurchaseOrderApprovalHistory item in Model.DataList)
                    {
                        <tr>
                            <td class="text-center">@item.LAST_STATUS</td>
                            <td class="text-center">@item.LAST_APPROVED_BY</td>
                            <td class="text-center">@item.LAST_APPROVED_DT</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="17" class="text-center">@CommonDisplayMessage.NoData</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
