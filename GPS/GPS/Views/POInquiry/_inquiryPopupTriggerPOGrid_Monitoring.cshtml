@using GPS.Constants;
@using GPS.Models.PO;
@using GPS.ViewModels;
@model List<GPS.Models.PO.POMonitoring>

<div class="table-responsive">
    <div style="width:1165px;">
        <table class="table table-striped table-bordered" width="100%">
            <thead>
                <tr>
                    <th class="text-center" style="width:120px">PR No.</th>
                    <th class="text-center" style="width:50px">Item</th>
                    <th class="text-center" style="width:120px">Material</th>
                    <th class="text-center" style="width:120px">PO No.</th>
                    <th class="text-center" style="width:100px">Status</th>
                    <th class="text-center" style="width:100px">Process Id</th>
                    <th class="text-center" style="width:120px">Date</th>
                    <th class="text-center">Remark</th>
                    <th class="text-center" style="width:17px;border-right: solid 1px #d5d1d1;"></th>
                </tr>
            </thead>
        </table>
    </div>
    <div class="grid-overflow" style="overflow-y:scroll;height: 200px;width:1165px;">
        <table id="mainTable" class="table table-striped table-bordered" width="100%">
            <tbody style="margin-bottom:10px;">
            @if (Model.Count() > 0)
            {
                foreach (POMonitoring item in Model)
                {
                    <tr>
                        <td class="text-left" style="width:120px">@item.PR_NO</td>
                        <td class="text-center" style="width:50px">@item.PR_ITEM_NO</td>
                        <td class="text-left" style="width:120px">@item.MAT_NO</td>
                        <td class="text-left" style="width:120px">@item.PO_NO</td>
                        <td class="text-center" style="width:100px">@item.STATUS</td>
                        <td class="text-center" style="width:100px">@item.PROCESS_ID</td>
                        <td class="text-center" style="width:120px">@item.PROCESS_DATE.ToString(CommonFormat.Datetime)</td>
                        <td class="text-left">@item.REMARK</td>
                    </tr>
                 }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center">@CommonDisplayMessage.NoData</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
<div class="row" style="margin-top:5px;">
    <div class="col-xs-8 col-sm-8 col-md-8">
        @Html.Partial("_inquiryPopupTriggerPO_UIPaging")
    </div>
    <div class="col-sm-4 text-right">
        <span class="form-inline ">
            Page size @Html.DropDownList("cmb-perpage-prMonitoring", PaginationViewModel.PageRowCountSelectList, new { id = "cmb-perpage-prMonitoring", @class = "cursor-1 input-sm", @style = "height:25px" })
        </span>
    </div>
</div>

<script  type="text/javascript">
    $("#cmb-perpage-prMonitoring").change(function () {
        GetMonitoring(1);
    });
</script>