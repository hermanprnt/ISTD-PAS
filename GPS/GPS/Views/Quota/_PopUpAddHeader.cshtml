@using GPS.Models.Master
@using GPS.Controllers.Master
@model GPS.Models.Master.Quota
@{
    string edit = (string)ViewData["edit"];
    string title = " Quota Master";
    
    if (edit == "1") { title = "Edit" + title; }   
    else { title = "Add" + title; }
}

<div class="modal-dialog" style="width:1200px">
    <form  method="post" action="javascript: onSaveData();" >
    <div class="modal-content">
        <div class="modal-header">
            <div>@title</div>
        </div>
        <div class="modal-body">
            <input type="hidden" id="txtEdit" value="@edit"/>
            <div class="row">
                <div class="form-horizontal">
                    <div class="col-xs-12">                         
                        <div class="col-xs-12 col-sm-12 col-md-4">
                            <div class="form-group form-group-xs">                            
                                <label class="col-sm-3 col-md-4 control-label text-muted"> 
                                    Division</label>                                   
                                <div class="col-sm-8 col-md-8"> 
                                    @Html.DropDownListFor(
                                            m => m.DIVISION_ID, 
                                            DivisionController.GetDivisionList(), 
                                            new {
                                                id = "txtDivisionPU", 
                                                @class = "form-control mandatory",
                                                @style = "width:100%",
                                                onchange="onDivision()"
                                            })                                                  
                                </div>                                    
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-4">
                             <div class="form-group form-group-xs">
                                <label class="col-sm-4 col-md-4 control-label text-muted">
                                    WBS No</label>
                                <div class="col-sm-5 col-md-8">
                                    <select id="txtWBSPU" class="form-control">                                    
                                    </select>                                                                      
                                </div>
                            </div>
                        </div> 
                        <div class="col-xs-12 col-sm-12 col-md-4">
                            <div class="form-group form-group-xs">
                                <label class="col-sm-4 col-md-4 control-label text-muted">
                                    Type</label>
                                <div class="col-sm-5 col-md-8">
                                    @Html.DropDownList("txtTypePU", QuotaController.SelectType(), new { @class = "cursor-1 custom-combo mandatory", onchange="javascript:onType()"})                                                             
                                </div>
                            </div>
                        </div>                                                               
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-horizontal">
                    <div class="col-xs-12">  
                         <div class="col-xs-12 col-sm-12 col-md-4">
                            <div class="form-group form-group-xs">
                                <label class="col-sm-4 col-md-4 control-label text-muted">
                                    Coordinator</label>
                                <div class="col-sm-5 col-md-8">
                                    @Html.DropDownListFor(
                                            m => m.ORDER_COORD, 
                                            PRCheckerController.PRCheckerSelectList, 
                                            new { 
                                                id = "txtCoordPU", 
                                                @class = "form-control", 
                                                @style = "width:100%;" 
                                            })                                                                  
                                </div>
                            </div>
                        </div>                        
                        <div class="col-xs-12 col-sm-12 col-md-4">
                            <div class="form-group form-group-xs">                            
                                <label class="col-sm-3 col-md-4 control-label text-muted"> 
                                    Amount</label>                                   
                                <div class="col-sm-8 col-md-8">  
                                    <input type="text" id="txtAmmount" style="text-align:right" class="form-control" value="0" onkeyup="formatNumeric('amount')"/>                                                    
                                </div>                                    
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-4">
                            <div class="form-group form-group-xs">
                                <label class="col-sm-4 col-md-4 control-label text-muted">
                                    Tolerance</label>
                                <div class="col-sm-5 col-md-8">
                                      <input type="text" id="txtAmmountTol" style="text-align:right" class="form-control" value="0" onkeyup="formatNumeric('tolerance')"/>                                                                     
                                </div>
                            </div>
                        </div>                                                                                    
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="modal-footer">
                    <div class="col-xs-6">
                    </div>
                <div class="col-xs-6 text-right">
                    <div class="form-group-xs">
                        <button type="submit" class="btn btn-primary btn-xs">Save</button>
                        <button type="button" class="btn btn-danger btn-xs" data-dismiss="modal">Cancel</button>                       
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
</form>
</div>